<section class="section">

<h2 class="has-text-centered">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'label is-large' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-large' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'input button is-large is-success' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</section>