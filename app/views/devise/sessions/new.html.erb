<section class="section">

<h2 class="has-text-centered">Join Esty</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'label is-large' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-large' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'label is-large' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'input is-large' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'input button is-large is-success' %>
  </div>
<% end %>

<%= render "users/shared/links" %>

</section>